
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all access to any path not explicitly matched below.
    match /{document=**} {
      allow read, write: if false;
    }

    // Sessions collection
    // Users can read, write (update, delete), and create their own session documents.
    match /sessions/{sessionId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.user_id;
      allow create: if request.auth != null && request.resource.data.user_id == request.auth.uid;

      // Subcollections within a session (queries, specialist_outputs, synthesizer_responses, summaries, metadata)
      // Users can read, write, and create documents in subcollections if they own the parent session.
      match /{subcollection}/{docId} {
        allow read, write, create: if request.auth != null && get(/databases/$(database)/documents/sessions/$(sessionId)).data.user_id == request.auth.uid;
      }
    }

    // Data Files collection
    // Authenticated users can read data files.
    // Writes to data_files should typically be handled by a trusted backend/admin process.
    match /data_files/{fileId} {
      allow read: if request.auth != null;
      allow write: if false; // Disallow client-side writes for now.
    }
  }
}
